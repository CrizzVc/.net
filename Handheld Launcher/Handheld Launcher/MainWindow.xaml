<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Handheld_Launcher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Handheld_Launcher"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Handheld Launcher">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <!-- Añadido nombre al Grid raíz para asignar DataContext desde el code-behind -->
    <Grid x:Name="RootGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
          KeyDown="RootGrid_KeyDown" IsTabStop="True" >

        <Grid.Resources>
            <local:BoolToWidthConverter x:Key="BoolToWidthConverter" />
            <Style TargetType="GridViewItem">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="GridViewItem">
                            <Grid x:Name="ContentRoot" RenderTransformOrigin="0.5,0.5">
                                <Grid.RenderTransform>
                                    <ScaleTransform x:Name="RootScale" ScaleX="1" ScaleY="1" />
                                </Grid.RenderTransform>

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal">
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="RootScale" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.2" />
                                                <DoubleAnimation Storyboard.TargetName="RootScale" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.2" />
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="PointerOver">
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="RootScale" Storyboard.TargetProperty="ScaleX" To="1.08" Duration="0:0:0.12" />
                                                <DoubleAnimation Storyboard.TargetName="RootScale" Storyboard.TargetProperty="ScaleY" To="1.08" Duration="0:0:0.12" />
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>

                                    <!-- Nuevo grupo para estados de selección/resalte -->
                                    <VisualStateGroup x:Name="SelectionStates">
                                        <VisualState x:Name="Unselected">
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="RootScale" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.12" />
                                                <DoubleAnimation Storyboard.TargetName="RootScale" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.12" />
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Selected">
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="RootScale" Storyboard.TargetProperty="ScaleX" To="1.15" Duration="0:0:0.12" />
                                                <DoubleAnimation Storyboard.TargetName="RootScale" Storyboard.TargetProperty="ScaleY" To="1.15" Duration="0:0:0.12" />
                                            </Storyboard>
                                        </VisualState>

                                        <!-- Estado más pequeño para selección por teclado/gamepad (evita recorte) -->
                                        <VisualState x:Name="SelectedKeyboard">
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="RootScale" Storyboard.TargetProperty="ScaleX" To="1.08" Duration="0:0:0.12" />
                                                <DoubleAnimation Storyboard.TargetName="RootScale" Storyboard.TargetProperty="ScaleY" To="1.08" Duration="0:0:0.12" />
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>

                                <ContentPresenter />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <TextBlock x:Name="TimeTextBlock" 
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Top" 
                   Margin="0,30,40,0" 
                   FontSize="26" 
                   FontWeight="SemiBold" 
                   Foreground="White"/>

        <!-- Quitado DataContext que apuntaba a Self para heredar el DataContext del RootGrid -->
        <StackPanel Padding="40">
            <StackPanel Orientation="Horizontal" Spacing="20" Margin="0,0,0,20">
                <TextBlock Text="MIS JUEGOS" Style="{StaticResource HeaderTextBlockStyle}"/>
                <Button Content="+" Click="AddGame_Click" Style="{StaticResource AccentButtonStyle}" CornerRadius="5" Width="30" Height="30"/>
            </StackPanel>


            <!-- Carrusel con botones (ahora incluye también el juego featured) -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="◀" Click="ScrollLeft_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Width="48" Height="120" />

                <ScrollViewer x:Name="CarouselScrollViewer"
                              Grid.Column="1"
                              HorizontalScrollMode="Enabled"
                              HorizontalScrollBarVisibility="Hidden"
                              VerticalScrollMode="Disabled"
                              VerticalScrollBarVisibility="Disabled"
                              Margin="8,0">
                    <GridView x:Name="CarouselGrid"
                              ItemsSource="{x:Bind OtherGames, Mode=OneWay}"
                              IsItemClickEnabled="True"
                              ItemClick="CarouselGrid_ItemClick"
                              SelectionMode="Single"
                              HorizontalAlignment="Center"
                              Padding="12,16">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>

                        <GridView.ItemTemplate>
                            <DataTemplate x:DataType="local:GameItem">
                                <!-- Anchura ahora depende de IsLarge; centrado y elemento más grande -->
                                <StackPanel Width="{Binding IsLarge, Converter={StaticResource BoolToWidthConverter}}" Margin="14" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Border Background="Gray" Height="260" CornerRadius="12" Width="{Binding IsLarge, Converter={StaticResource BoolToWidthConverter}}">
                                        <Image Source="{x:Bind Icon}" Stretch="UniformToFill" />
                                    </Border>

                                    <!-- Nombre justo debajo de la carátula -->
                                    <TextBlock Text="{x:Bind Name}" 
                                               HorizontalAlignment="Center" 
                                               Foreground="White" 
                                               Margin="0,10,0,0"
                                               FontSize="16"
                                               TextWrapping="Wrap"/>

                                    <!-- Botón para cambiar la carátula de este juego -->
                                    <Button Content="Cambiar carátula" Margin="0,10,0,0" Click="ChangeCover_Click" />
                                </StackPanel>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </ScrollViewer>

                <Button Grid.Column="2" Content="▶" Click="ScrollRight_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Width="48" Height="120" />
            </Grid>
        </StackPanel>

        <!-- Overlay detalle del juego (inspirado en la imagen proporcionada) -->
        <Grid x:Name="DetailOverlay" Visibility="Collapsed" Background="#FF000000" IsHitTestVisible="False">
            <!-- Imagen de fondo (carátula) -->
            <Image Source="{Binding SelectedGame.Icon}" Stretch="UniformToFill" Opacity="0.35"/>
            <!-- Gradiente oscuro para legibilidad -->
            <Rectangle>
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#00000000" Offset="0.0"/>
                        <GradientStop Color="#B3000000" Offset="0.6"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

            <!-- Contenido principal sobre el fondo -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="80" MaxWidth="900" IsHitTestVisible="True">
                <TextBlock Text="{Binding SelectedGame.Name}" FontSize="72" FontWeight="SemiBold" Foreground="White" TextWrapping="Wrap" />
                <StackPanel Orientation="Horizontal" Spacing="20" Margin="0,24,0,0">
                    <Button Content="▶ PLAY" Click="PlaySelectedGame_Click" Style="{StaticResource AccentButtonStyle}" Width="160" Height="48" />
                    <Button Content="Cerrar" Click="HideDetail_Click" Width="120" Height="48" />
                </StackPanel>

                <!-- Filas de estadísticas / tarjetas minimalistas -->
                <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,30,0,0">
                    <Border Background="#20101010" CornerRadius="10" Padding="18" MinWidth="220">
                        <StackPanel>
                            <TextBlock Text="WEEKLY ACTIVITY" Foreground="#80FFFFFF" FontSize="12" />
                            <TextBlock Text="— gráfico —" Foreground="White" Margin="0,8,0,0" />
                        </StackPanel>
                    </Border>

                    <Border Background="#20101010" CornerRadius="10" Padding="18" MinWidth="220">
                        <StackPanel>
                            <TextBlock Text="YOUR STATS" Foreground="#80FFFFFF" FontSize="12" />
                            <TextBlock Text="Win rate: 66%" Foreground="White" Margin="0,8,0,0" />
                        </StackPanel>
                    </Border>

                    <Border Background="#20101010" CornerRadius="10" Padding="18" MinWidth="220">
                        <StackPanel>
                            <TextBlock Text="TOP PERFORMANCES" Foreground="#80FFFFFF" FontSize="12" />
                            <TextBlock Text="— avatars —" Foreground="White" Margin="0,8,0,0" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Grid>

    </Grid>
</Window>